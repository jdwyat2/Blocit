<h1>New Advert</h1>

<div class="row">
    <div class="col-md-4">
        <p>Guidelines for Advert</p>
        <ul>
            <li>Guide</li>
            <li>Stuff</li>
            <li>More stuff</li>
        </ul>
    </div>
    <div class="col-md-8">
        <%= form_for @post do |f| %>
            <div class="form-group">
                <%= f.label :title %>
                
                <%= f.text_field :title, class: 'form-control', placeholder: "Enter advert title" %>
            </div>
            
            <div class="form-group">
                <%= f.label :copy %>
                <%= f.text_area :copy, rows: 8, class: 'form-control', placeholder: "Enter advert copy" %>
            </div>
            
            <div class="form-group">
                <%= f.label :price %>
                <%= f.number_field :price, class: 'form-control', placeholder: 100 %>
            </div>
            
            <div class= "form-group">
                <%= f.submit "Save", class: 'btn btn-success' %>
            </div>
        <% end %>
    </div>
</div>
